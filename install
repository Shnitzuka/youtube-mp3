#!/bin/bash
#youtube-mp3 install script

osname="$(uname -s)"

if [ $osname=Darwin ]; then

#Install FFmpeg

wget --output-document=/tmp/ffmpeg.zip http://lame1.buanzo.com.ar/FFmpeg_v0.6.2_for_Audacity_on_OSX.zip
unzip /tmp/ffmpeg.zip -d /tmp
cd /tmp/FFmpeg_*
sudo mv ffmpeg /usr/local/bin
sudo mv libavcodec*.dylib /usr/local/bin/libavcodec.dylib
sudo mv libavformat*.dylib /usr/local/bin/libavformat.dylib
sudo mv libavutil*.dylib /usr/local/bin/libavutil.dylib
sudo mv libswscale*.dylib /usr/local.bin/libswscale.dylib

sudo rm -rf /tmp/ffmpeg.zip
sudo rm -rf /tmp/FFmpeg_*

#Install youtube-mp3

sudo wget --output-document=/usr/local/bin/youtube-dl https://raw.github.com/rg3/youtube-dl/master/youtube-dl
sudo wget --output-document=/usr/local/bin/youtube-mp3 https://raw.github.com/dejay/youtube-mp3/master/youtube-mp3

chmod a+x /usr/local/bin/youtube-dl
chomd a+x /usr/local/bin/youtube-mp3


elif [ $osname=Linux ]; then

#Install youtube-mp3

sudo wget --output-document=/usr/local/bin/youtube-dl https://raw.github.com/rg3/youtube-dl/master/youtube-dl
sudo wget --output-document=/usr/local/bin/youtube-mp3 https://raw.github.com/dejay/youtube-mp3/master/youtube-mp3

sudo chmod a+x /usr/local/bin/youtube-dl
sudo chmod a+x /usr/local/bin/youtube-mp3

fi

echo finis!
